name: newfaker2
on:
  schedule:
    - cron: ''
  workflow_dispatch:
  watch:
    types: started
  repository_dispatch:
    types: sync newfaker2
jobs:
  repo-sync:
    env:
      PAT: ${{ secrets.PAT }} 
    runs-on: ubuntu-latest
    if: github.event.repository.owner.id == github.event.sender.id
    steps:
      - uses: actions/checkout@v2
        with:
          persist-credentials: false

      - name: sync zero205_JD_tencent_scf
        uses: repo-sync/github-sync@v2
        if: env.PAT
        with:
          source_repo: "https://github.com/gih2022/hyominnn2.git"
          source_branch: "main"
          destination_branch: "hyominnn2"
          github_token: ${{ secrets.PAT }}
